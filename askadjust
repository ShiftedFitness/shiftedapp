<body>

  <div class="debug" id="debug-info">Loading...</div>
  <div class="chatbot-container"></div>

  <script async type="module" src="https://interfaces.zapier.com/assets/web-components/zapier-interfaces/zapier-interfaces.esm.js"></script>
  <script>
    // Get just the "name" param from the URL
    const rawParams = new URLSearchParams(window.location.search);
    const name = rawParams.get("name") || "";
    const paramString = name ? `?name=${encodeURIComponent(name)}` : "";

    // Display the debug info above the chatbot
    document.getElementById("debug-info").textContent =
      name ? `Name param detected: ${name}` : "No name param passed.";

    console.log("Passing query string:", paramString);

    // Create and embed the chatbot
    const chatbot = document.createElement('zapier-interfaces-chatbot-embed');
    chatbot.setAttribute('is-popup', 'false');
    chatbot.setAttribute('chatbot-id', 'cmc1l7hcr0078hbluug1yd5q4');

    if (paramString) {
      chatbot.setAttribute('query-params', paramString);
    }

    document.querySelector('.chatbot-container').appendChild(chatbot);
  </script>
</body>
